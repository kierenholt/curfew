{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "env=prod",
      "program": "${workspaceFolder}/server/bin/run.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "type": "node",
      "sudo": true,
    },
    {
      "name": "env=test",
      "program": "TEST=1 ${workspaceFolder}/server/bin/run.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "type": "node",
      "sudo": true,
    },
    // {
    //   "name": "Attach",
    //   "port": 2000,
    //   "request": "attach",
    //   "skipFiles": [
    //     "<node_internals>/**"
    //   ],
    //   "type": "node",
    //   "restart": true
    // },
    {
      "type": "node",
      "request": "launch",
      "name": "run tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--test"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/server",
    }
  ]
}