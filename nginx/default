
server {
	listen 80;
	listen 443 ssl;

	ssl_certificate /home/full/path/to/localhost_cert.pem;
	ssl_certificate_key /home/full/path/to/localhost_key.pem;

	root /var/www/html;

	index index.html;

	server_name curfew;

	location / {
		try_files $uri $uri/ =404;
	}

    location /api {
        proxy_pass http://127.0.0.1:5000;
    }
}

